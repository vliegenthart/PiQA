[MASTER]
init-hook='sys.path += [
    "./serverless_architecture/layers/shared_utils/python",
    "./serverless_architecture/layers/table_extraction_algorithm/python",
    "./serverless_architecture/layers/vendor/python",
    "./serverless_architecture/layers/visual_clues_algorithm/python",
    "./serverless_architecture/functions/pipeline_queue_handler/wrapper",
    "./api"  ]'
disable=
  C0114, # missing-module-docstring
  C0413, # wrong-import-position
  C0411, # wrong-import-order
  R1705, # no-else-return
  R0914, # too-many-locals
  R0801, # duplicate-code
  E0401, # Unable to import, disabled due to venv
  W0511, # FIXME in comment detected
  W1514 # Using open without specifying an encoding

ignore-paths=tests/serverless_architecture/functions/, serverless_architecture/layers/table_extraction_algorithm/python/table_extraction_algorithm, tests/serverless_architecture/layers/visual_clues_algorithm/unit_tests/pre_processing, serverless_architecture/functions/cloudfront_edge_functions, research/semantic-search
ignore-patterns=.*DEPRECATED*

# see https://github.com/samuelcolvin/pydantic/issues/1961
extension-pkg-whitelist=pydantic

fail-under=8.5

[FORMAT]
max-line-length=120
max-locals=20
max-args=8
max-nested-blocks=8
max-branches=20

[MISCELLANEOUS]
notes=FIXME

[DESIGN]
max-attributes=20
max-statements=70
